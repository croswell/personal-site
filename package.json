{
  "name": "samcroswell-personal-site",
  "version": "1.0.0",
  "description": "Personal portfolio website for Sam Croswell - Founding Product Designer",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./input.css -o ./css/style.css --minify",
    "watch": "tailwindcss -i ./input.css -o ./css/style.css --watch",
    "optimize-images": "node scripts/optimize-images.js",
    "convert-webp": "node scripts/convert-webp.js",
    "generate-responsive": "node scripts/generate-responsive.js",
    "performance-check": "node scripts/performance-check.js",
    "build-prod": "npm run optimize-images && npm run build"
  },
  "keywords": [
    "portfolio",
    "design",
    "product-design",
    "personal-website"
  ],
  "author": "Sam Croswell",
  "license": "ISC",
  "devDependencies": {
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
